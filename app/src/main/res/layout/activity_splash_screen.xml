<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="horizontal"
    tools:context="com.saquib.hello.coachingapp.SplashScreen">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical|center_horizontal|fill_horizontal"
        android:layout_weight="1"
        android:foregroundGravity="center_vertical|fill_vertical|fill_horizontal"
        app:srcCompat="@mipmap/screen" />
</LinearLayout>
